[global]

    font = JetBrainsMono Nerd Font 18
    allow_markup = yes
    markup = yes
    format = "<span foreground='#5bb1b4'><b>%s</b></span>\n%b"
    sort = yes
    indicate_hidden = yes
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = false
    origin = top-right
    transparency = 0
    idle_threshold = 120
    monitor = 0
    follow = mouse
    sticky_history = yes
    line_height = 0
    separator_height = 2
    padding = 12
    horizontal_padding = 12
    separator_color = "#3c4549"
    separator_width = 1
    startup_notification = false
    corner_radius = 15
    frame_color = "#3c4549"
    frame_width = 1
    width = 600
    progress_bar_max_width = 400
    progress_bar_min_width = 400
    progress_bar_height = 10
