align=center
separator=false
color=#ffffff
separator_block_width=15
markup=pango

[battery]
command=~/.config/i3blocks/scripts/battery/battery_info.sh
interval=10
border=#8aadf4
border_top=2
border_right=0
border_bottom=0
border_left=0

[wifi]
command=iwgetid -r | tr '\n' ' ' && grep $(iwgetid -m | awk '{ printf "%s", $1 }') /proc/net/wireless | awk '{ printf "%i%\n", int($3 * 100 / 70) }'
instance=wlan0
interval=5
label=<span color="#f5a97f">  </span>
border=#f5a97f
border_top=2
border_right=0
border_bottom=0
border_left=0


[ethernet]
command=~/.config/i3blocks/scripts/network/ethernet.sh
instance=eth0  # Change this if your Ethernet interface has a different name
interval=5
# label=<span color="#91d7e3"> </span>
border=#91d7e3
border_top=2
border_right=0
border_bottom=0
border_left=0

[arch_update]
command=~/.config/i3blocks/scripts/packages/os-package-manager.sh
