backend = "glx";
vsync = true;
use-damage = true;
unredir-if-possible = true;

shadow = false;
shadow-radius = 15;
shadow-opacity = 0.7
shadow-offset-x = -15;
shadow-offset-y = -15;
shadow-color = "#000000";
crop-shadow-to-monitor = false;

corner-radius = 10;
detect-rounded-corners = true;

animations = (
	{
		triggers = [ "open", "show" ];
		preset = "appear";
		scale = 0.5;
		duration = 0.15;
	},
	{
		triggers = [ "close", "hide" ];
		preset = "disappear";
		scale = 0.5;
		duration = 0.15;
	},
	{
		triggers = [ "geometry" ];
		preset = "geometry-change";
		duration = 0.5;
	}
)
