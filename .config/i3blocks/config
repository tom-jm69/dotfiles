[time_est]
command=TZ=":Europe/Berlin" date '+%H : %M %Z' | awk '{ printf "%s<span color=\"#eed49f\">%s</span>%s<span color=\"#eed49f\"> %s</span>\n", $1, $2, $3, $4 }'
interval=1
label=<span color="#eed49f"> </span>
border=#eed49f
border_top=2
border_right=0
border_bottom=0
border_left=0

